%html
  %head
    %title Paige Ponzeka
    %link(rel="icon" href="images/favicon.ico" type="image/gif")
    %link(href="styles/reset.css" media="screen" rel="stylesheet" type="text/css" )
    %link(href="styles/launch.css" media="screen" rel="stylesheet" type="text/css" )



  %body
    .sidebar
      .sidebar-wrapper
        #name_banner
          %ul#first_name
            %li.indent.blue
              .minimal-indent P
            %li.indent.lime_green
              .minimal-indent A
            %li.indent.purple
              .minimal-indent I
            %li.indent.pink
              .minimal-indent G
            %li.indent.amber
              .minimal-indent E
          %ul#last_name
            %li.indent.maroon
              .minimal-indent P
            %li.indent.yellow
              .minimal-indent O
            %li.indent.red
              .minimal-indent N
            %li.indent.dark_blue
              .minimal-indent Z
            %li.indent.dark_purple
              .minimal-indent E
            %li.indent.dark_red
              .minimal-indent K
            %li.indent.seagreen
              .minimal-indent A
        
        .sidebar-logo
          .sidebar-logo-wrapper
            .sidebar-logo-dino
              %img{:src => "images/dino.png"}/
        
        %ul.sidebar-navigation
          %li.home.active
            %a#home-link{:href => "#home"} Home
          %li.about
            %a#about-link{:href => "#about"} About
         
          %li.work
            %a#work-link{:href => "#work"} Work
          %li.contact
            %a#contact-link{:href => "#contact"} Contact
          %li.blog
            %a#blog-link{:href => "http://hello.ponzeka.com"} Blog
      .sidebar-zigzag


    .main
      .main-content      
        %section
          = render 'partials/_home.html.haml'

        %section
          = render 'partials/_about.html.haml'

        %section
          = render 'partials/_work.html.haml'

        %section
          = render 'partials/_contact.html.haml'

  #little_dino_container.hide
    #little_dino_bubble
      #little_dino_bubble_content
        %p.message

      %ul#little_dino_bubble_buttons
        %li.hide.left#little_dino_bubble_buttons_yes Yes
        %li.hide.center Okay
        %li.center#little_dino_bubble_buttons_no Go away
      #little_dino_bubble_triangle_border
      #little_dino_bubble_triangle
    #little_dino

    %script(src="scripts/jquery-1.7.2.min.js" type="text/javascript" )
    %script(src="scripts/jquery.viewport.min.js" type="text/javascript")
    %script(src="scripts/jquery.easing.1.3.js" type="text/javascript")
    %script(src="scripts/jquery.lifestream.min.js" type="text/javascript" )
    %script(src="scripts/impress.js" type="text/javascript" )
    %script(src="scripts/jquery.isotope.min.js" type="text/javascript" )
    %script(src="scripts/launch.js" type="text/javascript" )






